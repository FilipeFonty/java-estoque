<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="DanielModeloProjetoPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>br.com.ClassesPersistentes.Banco</class>
    <class>br.com.ClassesPersistentes.Cliente</class>
    <class>br.com.ClassesPersistentes.Fornecedor</class>
    <class>br.com.ClassesPersistentes.Produto</class>
    <class>br.com.ClassesPersistentes.Unidade</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="123"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/siscomjava"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
